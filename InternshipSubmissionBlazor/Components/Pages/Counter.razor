@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<CounterComponent Count="Count" 
                  OnCountChaned="HandleCountChanged"></CounterComponent>
<p role="status">Current count: @Count</p>



@code {
    public int Count { get; set; }

    private void HandleCountChanged(int newValue)
    {
        Count = newValue;
    }

}